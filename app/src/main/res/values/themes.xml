<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#0055ff</item>
        <item name="colorPrimaryVariant">#0055ff</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">#0055ff</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#fff</item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#787880</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="BaseDialog" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="GreyBtnBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/gray_btn_bg</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#1B1B1B</item>
    </style>

    <style name="BlueBtnBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:background">@drawable/bg_blue_btn_selector</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="InputEditTextBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:background">@drawable/dialog_edit_text_bg</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingEnd">18dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">#1B1B1B</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="DialogInputEditTextBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:background">@drawable/dialog_edit_text_bg</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingEnd">18dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">#1B1B1B</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="RoomButtonStyle">
        <item name="android:layout_width">34dp</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:layout_marginBottom">11dp</item>
        <item name="android:background">@drawable/white_fill_circle_bg</item>
    </style>

</resources>
